# Environment Variables
NODE_ENV=production
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mamacare?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=generate_strong_jwt_secret_here_minimum_32_characters
JWT_EXPIRE=7d

# File Upload Configuration
MAX_FILE_SIZE=10485760 # 10MB
UPLOAD_PATH=uploads/

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_production_email@mamacare.com
EMAIL_PASS=your_app_specific_password

# Admin Configuration
ADMIN_EMAIL=admin@mamacare.com
ADMIN_PASSWORD=secure_admin_password_here

# Production Security
CORS_ORIGIN=https://your-admin-dashboard.com,https://your-mobile-app.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
