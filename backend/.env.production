# Use this template for production deployment

# Application Configuration
NODE_ENV=production
PORT=5000

# MongoDB Atlas Configuration (Production)
# Using your MongoDB Atlas cluster
MONGODB_URI=mongodb+srv://talentmundwa:theresakazingizi@cluster0.fgdy8jz.mongodb.net/mamacare?retryWrites=true&w=majority

