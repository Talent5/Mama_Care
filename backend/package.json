{
  "name": "mamacare-backend",
  "version": "1.0.0",
  "description": "MamaCare Backend API with Node.js and MongoDB",
  "main": "server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "build": "npm install",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:db": "node test-mongodb.js",
    "create-superadmin": "node scripts/createSuperAdmin.js",
    "audit:patients": "node scripts/auditPatientRoleConsistency.js",
    "backfill:patients": "node scripts/backfillPatientsForUsers.js",
    "cleanup:users": "node scripts/cleanupNonPatientUsers.js",
    "fix:patient-roles": "node scripts/fixPatientRoles.js",
    "logs:clear": "rm -rf logs/*",
    "health:check": "curl http://localhost:$PORT/health || echo 'Server not responding'"
  },
  "keywords": [
    "mamacare",
    "healthcare",
    "api",
    "mongodb",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "expo-server-sdk": "^3.7.0",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.3",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "json2csv": "^5.0.7",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "pdfkit": "^0.14.0",
    "qrcode": "^1.5.3",
    "speakeasy": "^2.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
